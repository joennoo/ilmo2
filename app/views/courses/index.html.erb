
<% if logged_in? %>

  <div class="account_updated" >
    <%= flash[:notice] %>
  </div>

  Welcome, <%= link_to current_user.username, edit_user_url(current_user)  %>!
              (<%= link_to "Logout", "/sessions/logout", :method => :delete %>)
  <h2>Newsfeed</h2>
  <% @newsfeed.each do |item| %>
    <%= item.message %><br/>
    <%= time_ago_in_words (item.created_at) %> ago
    <hr>
  <% end %>

 <h2>Courses</h2>
  <ul>
  <% @courses.each do |course| %>
    <li><%= link_to course.name,
                :controller=> "courses",
                :action=> "show",
                :id => course.id %>
    </li>
  <% end %>
  </ul>

<% else %>

  <h2>Login</h2>

  <div class="account_created" >
    <%= flash[:notice] %>
  </div>
  <div class="login_failed" >
    <%= flash[:error] %>
  </div>
  <br/>

  <% form_for @user, :url => sessions_url do |f| %>
     <%= f.label :username, 'Username' %>:
     <%= f.text_field :username %><br />
     <%= f.label :password, 'Password' %>:
     <%= f.password_field :password %><br />

     <%= submit_tag "OK" %>
  <% end %>

  <%= link_to "Register", new_user_url %>

<% end %>



