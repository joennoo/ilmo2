<h2><%= @ex_group.course_instance.course.name %></h2>

<h3><%= @ex_group.course_instance.name %>, <%= @ex_group.name %></h3>

<div class="registration_saved" >
  <%= flash[:notice] %>
</div>

<%= link_to "Back",
    course_course_instance_url(@ex_group.course_instance.course,
                               @ex_group.course_instance) %><br/>

<h4>Participants in this exercise group</h4>
<ul>
  <% @ex_group.users.each do |u| %>
  
  <li><%= u.username %></li>
  <% end %>
</ul>

<% if not registered?(@user, @ex_group) %>
  <%= link_to "Register to exercise group",
              registrations_url(:user_id => @user, :exercise_group_id => @ex_group),
              :method => :post %>
<% else %>
  You have registered to this exercise group<br/>
  <%  #= link_to "Remove registration from exercise group",
       #       @registration,
        #      :method => :delete %>
<% end %>


